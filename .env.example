# Flynn Environment Variables
# Copy this to .env and configure your settings

# ============================================================================
# API Keys
# ============================================================================

# OpenRouter API Key (for cloud model fallback)
# Get yours at: https://openrouter.ai/keys
FLYNN_API_KEY=sk-or-your-key-here

# ============================================================================
# Model Configuration
# ============================================================================

# Primary local model (Tier 2 - reasoning)
FLYNN_LOCAL_MODEL=qwen-2.5-7b

# Intent model (Tier 1 - fast classification)
FLYNN_INTENT_MODEL=qwen-2.5-3b

# Cloud model (Tier 3 - complex tasks)
FLYNN_CLOUD_MODEL=arcee-ai/trinity-large-preview:free

# ============================================================================
# Data Directory
# ============================================================================

# Path to store Flynn data (default: ~/.flynn)
FLYNN_DATA_PATH=

# Path to store downloaded models (default: ~/.flynn/models)
FLYNN_MODELS_DIR=

# ============================================================================
# Inference Settings
# ============================================================================

# Number of threads for CPU inference
FLYNN_THREADS=4

# Context window size
FLYNN_CONTEXT_SIZE=4096

# GPU layers to offload (0 = CPU only, -1 = all)
FLYNN_GPU_LAYERS=0

# ============================================================================
# Cloud Mode
# ============================================================================

# When to use cloud: never, smart, always
FLYNN_CLOUD_MODE=smart

# Monthly budget limit in USD
FLYNN_MONTHLY_BUDGET=10.0

# ============================================================================
# Features
# ============================================================================

# Enable calendar integration
FLYNN_ENABLE_CALENDAR=false

# Enable email integration
FLYNN_ENABLE_EMAIL=false

# Enable notes integration
FLYNN_ENABLE_NOTES=false

# Enable browser automation
FLYNN_ENABLE_BROWSER=false

# ============================================================================
# Development
# ============================================================================

# Log level: debug, info, warn, error
FLYNN_LOG_LEVEL=info

# Enable debug mode
FLYNN_DEBUG=false
